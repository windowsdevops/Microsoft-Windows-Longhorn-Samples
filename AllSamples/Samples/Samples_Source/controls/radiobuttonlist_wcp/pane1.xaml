  <RadioButton ID="rb1">Radio Button 1</RadioButton>
  <RadioButton ID="rb2">Radio Button 2</RadioButton>
  <RadioButton ID="rb3">Radio Button 3</RadioButton>
</RadioButtonList>

<Button ID="btn" Canvas.Top="50" Width="250">Click the radio buttons</Button>


</Canvas>