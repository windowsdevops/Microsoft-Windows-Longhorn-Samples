<DockPanel 
	xmlns="http://schemas.microsoft.com/2003/xaml/" 
	xmlns:def="Definition"  
	Width="100%" Height="100%" 
	def:Class="LoginScreen.Resources_Default"
	>

<DockPanel.Resources>

<!-- Background Styles  ********************************* -->	
    <Style def:Name="CustomBackground">	
		<Border Width="100%" Height="100%" />
		<Style.VisualTree>
			<Canvas Width="100%" Height="100%">
			    <Rectangle Width="100%" Height="100%" Fill="VerticalGradient #e4e4e4 #ffffff"/>
			</Canvas>
		</Style.VisualTree>
	</Style>
		
<!-- Button Styles -->
		<Style def:Name="ButtonStyler">
			 <Button Margin="0,0,20,20"  />
		</Style>
		<Style def:Name="ManageUsersButton" BasedOn="{ButtonStyler}">
			 <Button />
		</Style>
		<Style def:Name="GuestSigninButton" BasedOn="{ButtonStyler}">
			 <Button  />
		</Style>
		<Style def:Name="ForgotPasswordButton" BasedOn="{ButtonStyler}">
			 <Button DockPanel.Dock="right"  />
		</Style>
	    <Style def:Name="LoginButton" BasedOn="{ButtonStyler}">
			 <Button  Width="150" />
		</Style>		

		
<!-- UserTile ListBox Styles  *********************************-->
		<Style def:Name="LoginListBox" >
			<ListBox DockPanel.Dock="Top" />
		</Style>
        <Style >
            <ListItem  DockPanel.Dock="left" />
        </Style>
		<Style def:Name="UserTile" >
			<Image Width="120px" Height="120px"   />
		</Style>
		<Style def:Name="UserTileText" >
			<Text Width="100%" DockPanel.Dock="Top" HorizontalAlignment="center" />
		</Style>	

<!-- Password TextBox Styles  *********************************-->
		<Style def:Name="PasswordTextBox" >
			<TextBox Width="350" Height="30" HorizontalAlignment="left" Margin="20"/>
		</Style>	
		
<!-- Text Styles  *********************************-->	
		
        <Style def:Name="TypeText">
            <Text  FontSize="15" Margin="0,40,0,0" Foreground="black" DockPanel.Dock="Top" Width="100%" HorizontalAlignment="center" TextContent="Type Password" />
        </Style>


