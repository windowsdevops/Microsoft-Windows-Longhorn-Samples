<Canvas ID="root"
  xmlns="http://schemas.microsoft.com/2003/xaml">
	
	<Rectangle 
		RectangleTop="35px" RectangleLeft="35px" 
		RectangleHeight="50px" RectangleWidth="50px" 
		Fill="Blue"
		Rectangle.Opacity="1"/>
	<Rectangle 
		RectangleTop="10px" RectangleLeft="10px" 
		RectangleHeight="50px" RectangleWidth="50px" 
		Fill="Red"
		Rectangle.Opacity="1">
		<Rectangle.Opacity>
			
			<DoubleAnimation From="1" To="0" Begin="0" Duration="5" RepeatDuration="Indefinite"/>

		</Rectangle.Opacity>
	</Rectangle>

</Canvas>