<Canvas ID="root"
  xmlns="http://schemas.microsoft.com/2003/xaml"
  Background="White">
  
  <Rectangle
    RectangleLeft="20"
    RectangleTop="20"
    RectangleHeight="100"
    RectangleWidth="100">
    <Rectangle.Fill>
      <SolidColorBrush Color="Blue">
	<SolidColorBrush.ColorAnimations>
	  <ColorAnimation From="Red" To="Yellow" InterpolationMethod="Linear" Duration="2" 
            AutoReverse="True" RepeatCount="10" Begin="1" Fill="Freeze"/>
	</SolidColorBrush.ColorAnimations>
      </SolidColorBrush> 
</Rectangle.Fill>
 </Rectangle>
 
</Canvas>
