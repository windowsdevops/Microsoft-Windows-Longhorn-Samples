<FlowPanel ID="root"
xmlns="http://schemas.microsoft.com/2003/xaml/"
xmlns:def="Definition">
<Button ID="btn" DockPanel.Dock="Top" Height="200px" Width="400px" Click="RestoreDefaultProperties">
Restore Default Height and Width</Button>
  <def:Code>
  <![CDATA[
    Public Sub RestoreDefaultProperties(sender As object, args As System.Windows.Controls.ClickEventArgs)
      btn.ClearValue(System.Windows.FrameworkElement.HeightProperty)
      btn.ClearValue(System.Windows.FrameworkElement.WidthProperty)
    End Sub
 ]]>
  
  </def:Code>



</FlowPanel>

