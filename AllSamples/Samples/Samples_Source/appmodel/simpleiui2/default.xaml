<StringPageFunction xmlns="http://schemas.microsoft.com/2003/xaml"
           xmlns:def="Definition"
           def:CodeBehind="Default.xaml.cs"
           def:Class="WCSample.StartPage">
<DockPanel >

	<Border Background="LightGray">
	<DockPanel DockPanel.Dock="Left">
		<Text FontSize="14"
				FontWeight="Bold"
				Margin="10,20,10,10">Some Explanatory Text</Text>
	</DockPanel>
	</Border>
	
<DockPanel Dock="Fill">
	<Text DockPanel.Dock="Top"
			ID="SomeText"
			FontSize="14"
			FontWeight="Bold"
			Margin="10,20,10,10">Starting Page</Text>
		
	<HyperLink DockPanel.Dock="Top"
               Margin="10,20,10,10"
               ID="task1"
               Click="NextTask"
               Height="30"
               Width="150">Go to Task 1</HyperLink>

	<Button DockPanel.Dock="Top"
               Margin="10,20,10,10"
               ID="done"
               Click="NextTask"
               Height="30"
               Width="100">Done</Button>

	<Text DockPanel.Dock="Top"
			Margin="10,20,10,10"
			FontSize="12"
			FontWeight="Bold">String from Task1: <Text ID="task1Return"/></Text>
			
</DockPanel>
</DockPanel>
</StringPageFunction>