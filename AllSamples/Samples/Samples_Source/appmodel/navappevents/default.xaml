<DockPanel xmlns="http://schemas.microsoft.com/2003/xaml/"
           xmlns:def="Definition"
           def:CodeBehind="default.xaml.cs"
           def:Class="WCSample.StartPage"
           Loaded="Init">

    <Text DockPanel.Dock="Top"
            Margin="10,10,10,10">Start Page</Text>
    
    <Button Click="btnGoTo2"
            Height="30"
            Width="150"
            DockPanel.Dock="Top"
            Content="Go To Page 2"
            Margin="10,10,10,10"/>

    <Button Click="btnShutdown"
            Height="30"
            Width="150"
            DockPanel.Dock="Top"
            Content="Shutdown"
            Margin="10,10,10,10"/>

</DockPanel>