<DockPanel xmlns="http://schemas.microsoft.com/2003/xaml"
           xmlns:def="Definition"
           def:CodeBehind="default.xaml.cs"
           def:Class="SimpleNav.Pane1"
           Background="LightBlue">

    <Text DockPanel.Dock="Top"
            Margin="10,10,10,5"
            FontWeight="Bold"
            FontSize="14">Page 1</Text>
            
    <Text DockPanel.Dock="Top"
            Margin="10,20,10,5">Hyperlink Navigation</Text>
    <HyperLink DockPanel.Dock="Top"
            Margin="10,0,10,10"
            NavigateUri="Pane2.xaml">Go To Page 2</HyperLink>
    
    <Text DockPanel.Dock="Top"
            Margin="10,20,10,5">Simple Programmatic Navigation</Text>
    <Button Click="btnGoTo2"
            Height="30"
            Width="150"
            DockPanel.Dock="Top"
            Content="Go To Page 2"
            Margin="10,0,10,10"/>
    <Text DockPanel.Dock="Top"
            Margin="10,20,10,5">Navigate to Page Object</Text>
    <Button Click="btnGoToObj"
            Height="30"
            Width="150"
            DockPanel.Dock="Top"
            Content="Go To Page 2"
            Margin="10,0,10,10"/>
</DockPanel>