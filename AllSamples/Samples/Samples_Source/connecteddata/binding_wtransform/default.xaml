<DockPanel ID="root"
  xmlns="http://schemas.microsoft.com/2003/xaml"
  def:Class="WCPSample.Binding_wTransform"
  def:CodeBehind="default.xaml.cs"
  xmlns:def="Definition">
    <DockPanel Height="50" Width="300" DockPanel.Dock="Top">
      <Text ID="myText">Click 'Create a Binding' to start.</Text>
    </DockPanel>
  <DockPanel DockPanel.Dock="Left" Height="150">
          <ListBox ID="dropdown">
            <ListItem>en-US</ListItem>
            <ListItem>es-ES</ListItem>
            <ListItem>de-DE</ListItem>
          </ListBox>
  </DockPanel>
    <DockPanel Height="200" DockPanel.Dock="Fill">
          <Button DockPanel.Dock="Top" Height="30" ID="ChangeCulture" Click="OnClick">Change Culture</Button>
          <Button DockPanel.Dock="Top" Height="30" ID="Clear" Click="OnClick">Clear</Button>
          <Button DockPanel.Dock="Top" Height="30" ID="Change" Click="OnClick">Create a Binding</Button>
    </DockPanel>

</DockPanel>