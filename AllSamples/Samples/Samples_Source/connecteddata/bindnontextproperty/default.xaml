<DockPanel ID="root"
  xmlns="http://schemas.microsoft.com/2003/xaml"
  xmlns:def="Definition"
>
  <DockPanel.Resources>
    <ObjectDataSource def:Name="myDataSource" TypeName="WCPSample.myData,BindNonTextPropertySample" />
  </DockPanel.Resources>
  <DockPanel>
    <DockPanel.DataContext>
      <Bind DataSource="{myDataSource}"/>
    </DockPanel.DataContext>
  <Button Background="*Bind(Path=BoundColor;BindType=OneWay)" Width="200" Height="30">I am RED!</Button>
  </DockPanel>
</DockPanel>